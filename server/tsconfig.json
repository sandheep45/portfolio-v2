{
	"compilerOptions": {
		"baseUrl": ".", // base path relative to this tsconfig
		"paths": {
			"@app": ["app.ts"],
			"@config": ["config/config.ts"]
		},
		"module": "ESNext", // ESM mode
		"noEmit": true,
		"moduleResolution": "Bundler", // Key for supporting extensions
		"target": "ES2020",
		"outDir": "../dist/server",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": true, // ✅ Enable .ts import support
		"verbatimModuleSyntax": true // ✅ Don't strip extensions in emit
	},
	"include": ["**/*.ts", "types.d.ts"],
	"exclude": ["../node_modules"]
}
